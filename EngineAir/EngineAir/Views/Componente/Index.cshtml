<section class="row">

    @* \\\\\\\\\\\\\ BRAND \\\\\\\\\\\\\\\\\ *@

    <article class="col-12 col-lg-4 d-flex my-2">

        <div class="form-Brand bg-gray rounded-2 text-light container-fluid  d-flex flex-column justify-content-center">

            <h3 class="py-2">Marca</h3>

            @* \\\\\\\\\\\\\ FORM \\\\\\\\\\\\\\\\\ *@
            <form>

                <div class="row ">
                    <h5><b>Nombre</b></h5>
                    <input class="input-Form" type="text" />
                </div>

                <div class="row py-3">
                    <input type="submit" class="submit " value="Agregar" />
                </div>

            </form>

            @* \\\\\\\\\\\\\ TABLE \\\\\\\\\\\\\\\\\ *@
            <div class="row content-table mb-3">

                <table>

                    <thead class="thead">

                        <tr>
                            <th>Nombre</th>
                            <th>Estado</th>
