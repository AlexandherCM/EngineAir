<section class="row title border-celestial rounded-3 my-3">

    <h1><b><span class="color-celestial">C</span>ONCEPTO PLANEADOR</b></h1>

</section>

<section class="p my-2 row title border-eas bg-gray rounded-3">

    <aside class="col-12 col-lg-3 p-2 d-flex flex-column justify-content-center ">

        <h3><b class="color-eas">M</b>ARCA PLANEADOR</h3>

        <form>

            <div class="row justify-content-center ">
                <h5><b>Nombre</b></h5>
                <input class="input-Form" type="text" />
            </div>

            <div class="row py-3">
                <input type="submit" class="submit " value="Agregar" />
            </div>

        </form>

    </aside>



    <aside class="col-12 col-lg-9 bg-celestial">

        <div class="cont-table-brand mt-2 mb-2">

            <table>

                <thead class="thead border border-3 bg-gray text-dark">

                    <tr>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Editar</th>
                    </tr>

                </thead>

                <tbody class="tbody bg-serene text-light border">

                    <tr>
                        <td>Lore</td>
                        <td>
                            <label class="toggle-switch">
                                <input class="chbTable" type="checkbox">
                                <div class="toggle-switch-background">
                                    <div class="toggle-switch-handle"></div>
                                </div>
                            </label>
                        </td>
                        <td><img src="~/images/svg/pen-to-square-solid.svg" class="edit" /></td>
                    </tr>


                </tbody>

            </table>

        </div>

    </aside>


</section>


<section class="p row title border-eas bg-gray rounded-3 my-4">

    <aside class="col-12 col-lg-5 p-2 d-flex flex-column justify-content-center ">

        <h3><b class="color-eas">M</b>ODELO</h3>

        <form>

            <div class="row">

                <div class="col">

                    <h4><b>Marca</b></h4>

                    <select class="input-Form">
                        <option value="Maraca" selected></option>
                        <option value="Maraca1">Marca</option>
                    </select>


                </div>

                <div class="col">

                    <h4><b>Nombre</b></h4>
                    <input class="input-Form border-gray" type="text" />

                </div>

            </div>

            <div class="row py-2">

                <div class="col">

                    <h4><b>Horas de remplazo</b></h4>

                    <div class="row">

                        <div class="col d-flex flex-column">
                            <input class="input-FormTwin text-center" type="number" />
                            Hora
                        </div>:

                        <div class="col">
                            <input class="input-FormTwin text-center" type="number" />
                            Minutos
                        </div>

                    </div>

                </div>

                <div class="col">

                    <h4><b>Tiempo de remplazo</b></h4>

                    <div class="row">

                        <div class="col">
                            <select class="input-FormTwin ">
                                <option value="Maraca" selected></option>
                                <option value="Maraca1">Años</option>
                                <option value="Maraca1">Meses</option>
                            </select>
                            Unidad de tiempo
                        </div>

                        <div class="col">
                            <input class="input-FormTwin" type="number" />
                            cantidad
                        </div>

                    </div>

                </div>

            </div>

            <div class="row">

                <input type="submit" class="submit-Model " value="Agregar" />

            </div>

        </form>

    </aside>

    <aside class="col-12 col-lg-7 bg-celestial ">

        <div class="cont-table-brand mt-2 mb-2">

            <table>

                <thead class="thead border border-3 bg-gray text-dark">

                    <tr>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Editar</th>
                    </tr>

                </thead>

                <tbody class="tbody bg-serene text-light border">

                    <tr>
                        <td>Lore</td>
                        <td>
                            <label class="toggle-switch">
                                <input class="chbTable" type="checkbox">
                                <div class="toggle-switch-background">
                                    <div class="toggle-switch-handle"></div>
                                </div>
                            </label>
                        </td>
                        <td><img src="~/images/svg/pen-to-square-solid.svg" class="edit" /></td>
                    </tr>


                </tbody>

            </table>

        </div>

    </aside>


</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_TableScripts");
    }
