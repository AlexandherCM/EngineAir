@model MVC.Models.ViewModels.SesionViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/Login.css" />
</head>
<body>
    </style>


    <div class="container">
        <div class="col-lg-10">
            <div class="contenedor" id="contenedor">
                <div class="form-container registro">
                    <form asp-action="CrearCuenta">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h1>Crear cuenta</h1>
                        <span>Complete la siguiente informacion con sus datos personales</span>
                        <input asp-for="Nombre" type="text" placeholder="Nombre">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                        <input asp-for="Correo" type="email" placeholder="Correo" required title="por favor, introduce una dirección de correo electrónico válida.">
                        <span asp-validation-for="Correo" class="text-danger"></span>
                        <input asp-for="Clave" type="password" placeholder="Contraseña">
                        <span asp-validation-for="Clave" class="text-danger"></span>
                        <input asp-for="ConfirmarClave" type="password" placeholder="Confirmar contraseña">
                        @if (ViewBag.Registro != null)
                        {
                            <span class="text-danger">@ViewBag.Registro</span>
                        }
                        <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
                        <button>Registrarse</button>
                    </form>
                </div>


                <div class="form-container login">
                    <form asp-action="ValidarAcceso">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <h1>Inicio de sesion</h1>
                        <span>Use su correo y contraseña</span>
                        @* <input asp-for="Correo" type="email" class="form-control" id="Correo" name="correo" required title="por favor, introduce una dirección de correo electrónico válida."> *@
                        <input asp-for="Correo" type="email" placeholder="Correo" required title="por favor, introduce una dirección de correo electrónico válida.">
                        <span asp-validation-for="Correo" class="text-danger"></span>
                        <input asp-for="Clave" type="password" placeholder="Contraseña">
                        <span asp-validation-for="Clave" class="text-danger"></span>
                        @if (ViewBag.Sesion != null)
                        {
                            <span class="text-danger">@ViewBag.Sesion</span>
                        }
                        <a href="#">¿Olvidaste tu contraseña?</a>
                        <button>Iniciar sesion</button>
                    </form>
                </div>

                <div class="toggle-container">
                    <div class="toggle">
                        <div class="toggle-panel toggle-left">
                            <h1>Ya tienes cuenta</h1>
                            <p>Inicia sesion con tu correo y contraseña</p>
                            <button class="hidden" id="login">Iniciar sesion</button>
                        </div>
                        <div class="toggle-panel toggle-right">
                            <h1>Aun no tienes cuenta</h1>
                            <p>Registrate con tus datos personales</p>
                            <button class="hidden" id="register">Registrarse</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const container = document.getElementById('contenedor');
        const registerBtn = document.getElementById('register');
        const loginBtn = document.getElementById('login');

        registerBtn.addEventListener('click', () => {
            container.classList.add("active");
        });

        loginBtn.addEventListener('click', () => {
            container.classList.remove("active");
        });
    </script>




    <main id="content-main" class="bg-index container-fluid">
        <article class="">
            <section style="margin:auto; width:25%;" class="bg-light text-center mt-5 p-5">
                <form asp-action="ValidarAcceso" id="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    @* - - - - - - - - - - - - - Bienvenida - - - - - - - - - - - - - *@
                    <section class="row text-center">
                        <h2>
                            <b>
                                <span class="color-R">I</span>niciar sesi<span class="color-R">ó</span>n
                            </b>
                        </h2>
                    </section>
                    @* - - - - - - - - - - - - - Correo - - - - - - - - - - - - - *@
                    <section class="row mt-2">
                        <div class="sesion-input">
                            <label asp-for="Correo" for="exampleInputEmail1">Dirección de correo eléctronico</label>
                            <br />
                            <input asp-for="Correo" type="email" style="width:100%">
                            <br />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                    </section>
                    @* - - - - - - - - - - - - - Contraseña - - - - - - - - - - - - -*@
                    <section class="row pt-3">
                        <div class="sesion-input">
                            <label asp-for="Clave" for="exampleInputPassword1">Contraseña</label>
                            <br />
                            <input asp-for="Clave" type="password" style="width:100%">
                            <br />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                        </div>
                    </section>

                    <section class="row pt-3">
                        <div class="sesion-input">
                            @if (ViewBag.Sesion != null)
                            {
                                <span class="text-danger">@ViewBag.Sesion</span>
                            }
                        </div>
                    </section>
                    @* - - - - - - - - - - - - - Registrarse - - - - - - - - - - - - -*@
                    <section class="row mt-2">
                        <a asp-controller="Acceso" asp-action="Registro"><p>¿Aún no tienes una cuenta? <b id="registrar">Registrate aquí</b></p></a>
                    </section>
                    @* - - - - - - - - - - - - - Olvidaste tu contraseña - - - - - - - - - - - - - *@
                    <section class="row mb-2">
                        <b>
                            <a asp-action="Recuperar">¿Olvidaste tu contraseña?</a>
                        </b>
                    </section>

                    <section class="row pb-3">
                        <div class="sesion-input">
                            <input type="submit" value="Iniciar sesión" class="boton" />
                        </div>
                    </section>

                </form>
            </section>

        </article>
    </main>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
